<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp" >

    <TextView
        android:id="@+id/tView_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:padding="6dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp" /> 

    <ImageButton
        android:id="@+id/btn_edit"
        android:layout_width="@dimen/action_button"
        android:layout_height="@dimen/action_button"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/edit_trait"
        android:hapticFeedbackEnabled="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="1dp"
        android:src="@drawable/edit_btn"
        android:padding="2dp" />

    <ImageButton
        android:id="@+id/btn_delete"
        style="@style/ButtonText"
        android:layout_width="@dimen/action_button"
        android:layout_height="@dimen/action_button"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/delete_trait"
        android:hapticFeedbackEnabled="true"
        android:scaleType="fitCenter"
        android:src="@drawable/del_btn" 
        android:padding="2dp" />

</LinearLayout>